{
  "$schema": "https://opencode.ai/config.json",
  // Theme
  "theme": "opencode",
  // Auto-update OpenCode
  "autoupdate": true,
  // ============================================================================
  // FORMATTER CONFIGURATION - Use Prettier for code formatting
  // ============================================================================
  "formatter": {
    "prettier": {
      "command": [
        "yarn",
        "exec",
        "prettier",
        "--write",
        "$FILE"
      ],
      "extensions": [
        ".ts",
        ".tsx",
        ".js",
        ".jsx",
        ".json",
        ".md",
        ".yaml",
        ".yml",
        ".css"
      ]
    }
  }
}